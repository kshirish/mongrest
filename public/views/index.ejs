<!doctype html>
<html>
<head>
	<title>Mongrest</title>

	<!-- stylesheets -->
	<link rel="shortcut icon" sizes="16x16 24x24 32x32 48x48 64x64 96x96" href="/img/favicon.ico">
	<link rel="stylesheet" type="text/css" href="/libs/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>

	<!-- container -->
    <div class="container">
    	<div class="col-sm-8 col-sm-offset-2">        
	        <div class="jumbotron">
	          <h1>Mongrest!</h1>
	          <p>An application that creates models and queries the database based on restful urls</p>
	        </div>

	        <div class="page-header">
	          <h1>Create a model</h1>
	        </div>
	        
	        <!-- create model form -->
			<form id="create-model-form" action="/create" method="POST">
				<div class="row">
					<div class="form-group col-sm-12">
						<label>Model name</label>
						<input type="text" class="form-control">
					</div>
				</div>
			
				<div id="rows">
					<div class="row form-row">
						<div class="form-group col-sm-7">
							<label>Column name</label>
							<input type="text" class="form-control">
						</div>
						<div class="form-group col-sm-3">
							<label>Type</label>
							<select class="form-control">
								<% types.forEach(function(type) { %>
									<option value="<%= type %>"><%= type %></option>
								<% }); %>
							</select>
						</div>
						<div class="form-group col-sm-2">
							<label class="invisible">Type</label>
							<button type="button" class="btn btn-danger delete">
								<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
							</button>
						</div>
					</div>
				</div>

				<hr>
				<div class="row">
					<div class="col-sm-10">
						<button type="submit" class="btn btn-default btn-block">
							<span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span> Create
						</button>
					</div>
					<div class="col-sm-2">
						<button id="add-row" type="button" class="btn btn-success btn-block">
							<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add row
						</button>
					</div>
				</div>
			</form>
      	</div>
    </div>

    <!-- row template -->
    <script type="text/template" id="row-template">
		<div class="row form-row">
			<div class="form-group col-sm-7">
				<label>Column name</label>
				<input type="text" class="form-control">
			</div>
			<div class="form-group col-sm-3">
				<label>Type</label>
				<select class="form-control">
					<% types.forEach(function(type) { %>
						<option value="<%= type %>"><%= type %></option>
					<% }); %>
				</select>
			</div>
			<div class="form-group col-sm-2">
				<label class="invisible">Type</label>
				<button type="button" class="btn btn-danger delete">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
				</button>
			</div>
		</div>
    </script>
    
    <!-- scripts -->
    <script type="text/javascript" src="/libs/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
</body>
</html>